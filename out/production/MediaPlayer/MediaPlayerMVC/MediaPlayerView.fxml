<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.media.MediaView?>

<GridPane alignment="CENTER" hgap="10" vgap="10.0"
          fx:controller="MediaPlayerMVC.MediaPlayerController"
          xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox spacing="100" alignment="CENTER"
          GridPane.columnIndex="0" GridPane.rowIndex="0">
        <ImageView fx:id="pepe1" fitHeight="128" fitWidth="128" preserveRatio="true"/>
        <ImageView fx:id="pepe2" fitHeight="128" fitWidth="128" preserveRatio="true"/>
    </HBox>

    <MediaView fx:id="mediaView"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <HBox spacing="10" alignment="CENTER"
          GridPane.ColumnIndex="0" GridPane.rowIndex="2">
        <Button onAction="#previousButtonAction">
            <graphic>
                <ImageView fx:id="previousButton"/>
            </graphic>
        </Button>
        <Button onAction="#playButtonAction">
            <graphic>
                <ImageView fx:id="playButton"/>
            </graphic>
        </Button>
        <Button onAction="#nextButtonAction">
            <graphic>
                <ImageView fx:id="nextButton"/>
            </graphic>
        </Button>
    </HBox>
</GridPane>